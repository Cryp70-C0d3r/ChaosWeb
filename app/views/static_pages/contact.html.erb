<% provide(:title, 'Contact') %>
<div class="flex items-center min-h-screen p-4 bg-gray-100 lg:justify-center" style="background-image: url(<%= asset_path 'cyber_world.jpg' %>)">
      <div class="flex flex-col overflow-hidden bg-white rounded-md shadow-lg max md:flex-row md:flex-1 lg:max-w-screen-md" style="box-shadow: 10px 10px 13px #0F0">
        <div class="p-4 py-6 text-white bg-green-500 md:w-80 md:flex-shrink-0 md:flex md:flex-col md:items-center md:justify-evenly">
          <div class="my-3 text-4xl font-bold tracking-wider text-center" style="font-family: 'VT323', monospace; font-size: 45px;">
            ChaosWeb
          </div>
          <p class="mt-6 font-normal text-center text-white-300 md:mt-0" style="font-family: 'Syncopate', sans-serif;">
            With the power of ChaosWeb on your side, you can stress less over
            the Web aspect of your business and more on your customers!
          </p>
          <p class="flex flex-col items-center justify-center mt-10 text-center">
            <span style="font-family: 'Stardos Stencil', cursive; font-size: 35px;">Direct Contact?</span>
            <b style="font-family: 'Cinzel Decorative', cursive; font-size: 20px;">
              Email: <%= link_to 'Cryp70', 'mailto:cryp70@tuta.io?cc=ghost@kanyi.gm&bcc=khristane21@gmail.com&subject=ChaosWeb%20Services$20Inquiry&body=Hello... I would like to learn more about your services and utilize your firm for my next project!' %><br/>
              Tel: (254) 221-3846<br/>
              Tel: (254) 436-2011
            </b>
          </p>
        </div>
        <div class="p-5 bg-white md:flex-1">
          <h3 class="my-4 text-2xl font-semibold text-gray-700">Form Submission:</h3>
          <%= form_for 'Contact', url: contact_path, remote: true do |f| %>

            <!-- Collect User Name: -->
            <div class="flex flex-col space-y-1">
              <%= f.label 'Name:', class: 'text-sm font-semibold text-gray-500' %></br>
              <%= f.text_field  :name, required: true, class: 'px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200', placeholder: 'Cryp70 H4ck3r' %></br>
            </div>

            <!-- Collect User Email: -->
            <div class="flex flex-col space-y-1">
              <%= f.label 'Email:', class: 'text-sm font-semibold text-gray-500' %></br>
              <%= f.text_field :email, required: true, class: "px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200", placeholder: 'cryp70@tuta.io' %></br>
            </div>

            <!-- Collect User Message: -->
            <div class="flex flex-col space-y-1">
              <%= f.label 'Message:', class: 'text-sm font-semibold text-gray-500' %></br>
              <%= f.text_field :message, rows: 8, cols: 40, required: true, class: "px-4 py-2 transition duration-300 border border-gray-300 rounded focus:border-transparent focus:outline-none focus:ring-4 focus:ring-blue-200", placeholder: 'I would like to inquire about your services...'%></br>
            </div>

            <div>
              <%= f.submit 'Send Message', class: 'w-full px-4 py-2 text-lg font-semibold text-white transition-colors duration-300 bg-blue-500 rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-blue-200 focus:ring-4' %>
            </div>
            <br/>
            <br/>
            <div class="flex flex-col space-y-5">
              <span class="flex items-center justify-center space-x-2">
                <span class="h-px bg-gray-400 w-14"></span>
                <span class="font-normal text-gray-500">Connect With Us:</span>
                <span class="h-px bg-gray-400 w-14"></span>
              </span>
              <div class="flex flex-col space-y-4">
                <a href="https://www.facebook.com/ChaosW3b-102968585186504" target="_blank" class="border-2 border-transparent bg-blue-500 ml-3 py-2 px-4 font-bold uppercase text-white rounded transition-all hover:border-blue-500 hover:bg-transparent hover:text-blue-500" style="text-align: center;"><i class="fab fa-facebook"></i> Facebook</a>
                <a href="https://twitter.com/chaosw3b" target="_blank" class="border-2 border-transparent bg-green-500 ml-3 py-2 px-4 font-bold uppercase text-white rounded transition-all hover:border-green-500 hover:bg-transparent hover:text-green-500" style="text-align: center;"><i class="fab fa-twitter"></i> Twitter</a>
                <a href="https://www.instagram.com/chaosw3b/" target="_blank" class="border-2 border-transparent bg-yellow-500 ml-3 py-2 px-4 font-bold uppercase text-white rounded transition-all hover:border-yellow-500 hover:bg-transparent hover:text-yellow-500" style="text-align: center;"><i class="fab fa-instagram-square"></i> Instagram</a><br/>
                <br/>
                <iframe src="https://calendar.google.com/calendar/embed?src=chaosw3b%40gmail.com&ctz=America%2FChicago" style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
